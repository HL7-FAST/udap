@page
@model IdentityServer.Pages.Home.Index

<div class="welcome-page">
    <div class="text-center mb-5">
        <h1 class="display-5 mb-3">
            FAST Security Reference Implementation Server
        </h1>
        <p class="lead text-muted">
            A reference implementation of the <a href="https://build.fhir.org/ig/HL7/fhir-udap-security-ig/" target="_blank">FAST Security Implementation Guide</a>
        </p>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card elevation-2">
                <div class="card-header">
                    <i class="fa-solid fa-globe"></i>
                    Well-Known Endpoints
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="~/.well-known/openid-configuration" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fa-solid fa-link text-primary me-3"></i>
                            <div>
                                <div class="fw-semibold">OpenID Configuration</div>
                                <small class="text-muted">.well-known/openid-configuration</small>
                            </div>
                        </a>
                        <a href="~/.well-known/udap" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fa-solid fa-shield-halved text-primary me-3"></i>
                            <div>
                                <div class="fw-semibold">UDAP Configuration</div>
                                <small class="text-muted">.well-known/udap</small>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card elevation-2">
                <div class="card-header">
                    <i class="fa-solid fa-user-shield"></i>
                    Administration
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="~/admin" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fa-solid fa-cog text-primary me-3"></i>
                            <div>
                                <div class="fw-semibold">System Admin</div>
                                <small class="text-muted">Configure system settings</small>
                            </div>
                        </a>
                        <a href="~/udap" class="list-group-item list-group-item-action d-flex align-items-center">
                            <i class="fa-solid fa-wrench text-primary me-3"></i>
                            <div>
                                <div class="fw-semibold">UDAP Admin</div>
                                <small class="text-muted">Manage UDAP configuration</small>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 p-4 bg-light rounded">
        <p class="mb-0 text-center">
            <i class="fa-solid fa-info-circle text-primary me-2"></i>
            This server is built on <a href="https://duendesoftware.com/products/identityserver" target="_blank" class="text-decoration-none">
                Duende IdentityServer <i class="fa-solid fa-external-link-alt fa-sm"></i> <small class="text-muted">(version @Model.Version)</small>
            </a>
        </p>
    </div>
</div>
