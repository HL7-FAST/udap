@page
@model IdentityServer.Pages.Udap.Communities.NewModel
@{
}


<div>

    <h2>
        New Community
    </h2>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col">
            <form method="post">

                <div class="form-group">
                    <label asp-for="@Model.InputModel.Name">Community Name</label>
                    <input class="form-control" asp-for="@Model.InputModel.Name" autofocus />
                </div>

                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Save Changes</button>
                    <a class="btn btn-secondary" asp-page="/Udap/Communities/Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>

</div>
