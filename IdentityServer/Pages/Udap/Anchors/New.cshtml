@page
@model IdentityServer.Pages.Udap.Anchors.NewModel
@{
}

<div>
    <h2>New Trust Anchor</h2>


    <div class="row">
        <div class="col-6">

            <form method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label asp-for="@Model.InputModel.CommunityId"></label>
                    <select class="form-control" asp-for="@Model.InputModel.CommunityId">
                        @foreach (var community in Model.Communities)
                        {
                            <option value="@community.CommunityId">@community.Name</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.AnchorFile">Anchor File</label>
                    <input class="form-control" asp-for="@Model.AnchorFile" type="file" accept=".pem, .crt, .cer, .key" />
                    @if (!String.IsNullOrEmpty(Model.FileMessage))
                    {
                        <div class="alert alert-danger">
                            @Html.Raw(Model.FileMessage)
                        </div>
                    }
                </div>

                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Save Changes</button>
                    <a class="btn btn-secondary" asp-page="/Udap/Anchors/Index">Cancel</a>
                </div>
            </form>
        </div>  
    </div>

</div>
