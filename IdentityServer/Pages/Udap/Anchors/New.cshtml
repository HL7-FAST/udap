@page
@model IdentityServer.Pages.Udap.Anchors.NewModel
@{
}

<div>
    <div class="mb-4">
        <h2 class="display-6 mb-3">
            <i class="fa-solid fa-plus-circle text-primary me-2"></i>
            New Trust Anchor
        </h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card elevation-2">
                <div class="card-header">
                    <i class="fa-solid fa-certificate me-2"></i>
                    Trust Anchor Details
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label asp-for="@Model.InputModel.CommunityId" class="form-label">Community</label>
                            <select class="form-select form-select-lg" asp-for="@Model.InputModel.CommunityId">
                                @foreach (var community in Model.Communities)
                                {
                                    <option value="@community.CommunityId">@community.Name</option>
                                }
                            </select>
                            <small class="text-muted">Select the community this anchor belongs to</small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="@Model.AnchorFile" class="form-label">Certificate File</label>
                            <input class="form-control form-control-lg" asp-for="@Model.AnchorFile" type="file" accept=".pem, .crt, .cer, .key" />
                            <small class="text-muted">Upload a PEM, CRT, CER, or KEY file</small>
                            
                            @if (!String.IsNullOrEmpty(Model.FileMessage))
                            {
                                <div class="alert alert-danger border-0 mt-3">
                                    <i class="fa-solid fa-exclamation-triangle me-2"></i>
                                    @Html.Raw(Model.FileMessage)
                                </div>
                            }
                        </div>

                        <div class="d-flex gap-2">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="fa-solid fa-upload me-2"></i>Upload Anchor
                            </button>
                            <a class="btn btn-secondary btn-lg" asp-page="/Udap/Anchors/Index">
                                <i class="fa-solid fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>  
    </div>
</div>
