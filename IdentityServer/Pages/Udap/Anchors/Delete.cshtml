@page
@model IdentityServer.Pages.Udap.Anchors.DeleteModel
@{
}

<div>
    <div class="mb-4">
        <h2 class="display-6 mb-3">
            <i class="fa-solid fa-trash text-danger me-2"></i>
            Delete Trust Anchor
        </h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="alert alert-warning border-0 elevation-1">
                <h5 class="alert-heading">
                    <i class="fa-solid fa-exclamation-triangle me-2"></i>
                    Confirm Deletion
                </h5>
                <p class="mb-0">Are you sure you want to delete this trust anchor? This action cannot be undone.</p>
            </div>

            <div class="card elevation-2">
                <div class="card-header">
                    <i class="fa-solid fa-info-circle me-2"></i>
                    Trust Anchor Details
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 text-muted">
                            <i class="fa-solid fa-fingerprint me-2"></i>Anchor ID
                        </dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-secondary fs-6">@Model.InputModel.AnchorId</span>
                        </dd>
                        
                        <dt class="col-sm-3 text-muted">
                            <i class="fa-solid fa-users me-2"></i>Community
                        </dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info fs-6">@Model.InputModel.Community?.Name</span>
                        </dd>
                        
                        <dt class="col-sm-3 text-muted">
                            <i class="fa-solid fa-heading me-2"></i>Name
                        </dt>
                        <dd class="col-sm-9">
                            @Model.InputModel.Name
                        </dd>
                        
                        <dt class="col-sm-3 text-muted">
                            <i class="fa-solid fa-file-certificate me-2"></i>Certificate
                        </dt>
                        <dd class="col-sm-9">
                            <code class="text-muted small">@Model.InputModel.Certificate.Substring(0, Math.Min(150, Model.InputModel.Certificate.Length))...</code>
                        </dd>
                        
                        <dt class="col-sm-3 text-muted">
                            <i class="fa-solid fa-fingerprint me-2"></i>Thumbprint
                        </dt>
                        <dd class="col-sm-9">
                            <code>@Model.InputModel.Thumbprint</code>
                        </dd>
                        
                        <dt class="col-sm-3 text-muted">
                            <i class="fa-solid fa-calendar-check me-2"></i>Valid From
                        </dt>
                        <dd class="col-sm-9">
                            @Model.InputModel.BeginDate.ToString("yyyy-MM-dd HH:mm:ss")
                        </dd>
                        
                        <dt class="col-sm-3 text-muted">
                            <i class="fa-solid fa-calendar-xmark me-2"></i>Valid Until
                        </dt>
                        <dd class="col-sm-9">
                            @Model.InputModel.EndDate.ToString("yyyy-MM-dd HH:mm:ss")
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-light">
                    <form method="post">
                        <input type="hidden" asp-for="@Model.InputModel.AnchorId" />
                        <div class="d-flex gap-2">
                            <button class="btn btn-danger btn-lg" type="submit" name="Button" value="delete">
                                <i class="fa-solid fa-trash me-2"></i>Confirm Delete
                            </button>
                            <a class="btn btn-secondary btn-lg" asp-page="/Udap/Anchors/Index">
                                <i class="fa-solid fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
