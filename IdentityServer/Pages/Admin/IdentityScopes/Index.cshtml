@page
@model IdentityServer.Pages.Admin.IdentityScopes.IndexModel
@{
}

<div class="clients-page">
    <div class="mb-4">
        <h2 class="display-6 mb-3">
            <i class="fa-solid fa-id-card text-primary me-2"></i>
            Identity Scopes
        </h2>
    </div>

    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card elevation-2">
                <div class="card-body">
                    <form class="row g-3 align-items-end">
                        <div class="col-md-6">
                            <label for="filter" class="form-label">Filter Scopes</label>
                            <div class="form-outline" data-mdb-input-init>
                                <input class="form-control" placeholder="Search by name..." id="filter" name="filter" type="text" value="@Model.Filter" autofocus />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex gap-2">
                                <button class="btn btn-primary">
                                    <i class="fa-solid fa-search me-2"></i>Search
                                </button>
                                <a asp-page="/Admin/Index" class="btn btn-secondary">
                                    <i class="fa-solid fa-times me-2"></i>Cancel
                                </a>
                                <a asp-page="/Admin/IdentityScopes/New" class="btn btn-success ms-auto">
                                    <i class="fa-solid fa-plus me-2"></i>New Scope
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card elevation-2">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th><i class="fa-solid fa-tag me-2"></i>Name</th>
                                <th><i class="fa-solid fa-heading me-2"></i>Display Name</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach(var scope in Model.Scopes)
                            {
                                <tr>
                                    <td>
                                        <a asp-page="/Admin/IdentityScopes/Edit" asp-route-id="@scope.Name" class="text-decoration-none fw-semibold">
                                            <i class="fa-solid fa-edit me-2 text-primary"></i>@scope.Name
                                        </a>
                                    </td>
                                    <td>@scope.DisplayName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
