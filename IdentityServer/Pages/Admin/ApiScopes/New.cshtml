@page
@model IdentityServer.Pages.Admin.ApiScopes.NewModel
@{
}

<div class="clients-page">
    <div class="mb-4">
        <h2 class="display-6 mb-3">
            <i class="fa-solid fa-plus-circle text-primary me-2"></i>
            New API Scope
        </h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <partial name="_ValidationSummary" />

            <div class="card elevation-2">
                <div class="card-header">
                    <i class="fa-solid fa-list-check me-2"></i>
                    Scope Details
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="@Model.InputModel.Name" class="form-label">Scope Name</label>
                            <div class="form-outline" data-mdb-input-init>
                                <input class="form-control form-control-lg" asp-for="@Model.InputModel.Name" placeholder="e.g., api.read" autofocus />
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="@Model.InputModel.DisplayName" class="form-label">Display Name</label>
                            <div class="form-outline" data-mdb-input-init>
                                <input class="form-control form-control-lg" asp-for="@Model.InputModel.DisplayName" placeholder="Human-readable name" />
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="@Model.InputModel.UserClaims" class="form-label">User Claims</label>
                            <div class="form-outline" data-mdb-input-init>
                                <input class="form-control" asp-for="@Model.InputModel.UserClaims" placeholder="Space delimited claims" />
                            </div>
                            <small class="text-muted">Enter claims separated by spaces (e.g., name email role)</small>
                        </div>
                        
                        <hr class="my-4">
                        <h5 class="mb-3">
                            <i class="fa-solid fa-toggle-on me-2"></i>
                            Scope Settings
                        </h5>
                        
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="@Model.InputModel.Enabled" id="enabledSwitch" />
                                <label class="form-check-label fw-semibold" for="enabledSwitch">
                                    Enabled
                                </label>
                            </div>
                            <small class="text-muted ms-4">Allow clients to request this scope</small>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="@Model.InputModel.ShowInDiscoveryDocument" id="discoverySwitch" />
                                <label class="form-check-label fw-semibold" for="discoverySwitch">
                                    Show in Discovery Document
                                </label>
                            </div>
                            <small class="text-muted ms-4">Make this scope visible in the discovery endpoint</small>
                        </div>
                        
                        <div class="d-flex gap-2">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="fa-solid fa-save me-2"></i>Create Scope
                            </button>
                            <a class="btn btn-secondary btn-lg" asp-page="/Admin/ApiScopes/Index">
                                <i class="fa-solid fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
