@page
@model IdentityServer.Pages.Admin.ApiScopes.EditModel
@{
}

<div class="identityscopes-page">
    <div class="mb-4">
        <h2 class="display-6 mb-2">
            <i class="fa-solid fa-edit text-primary me-2"></i>
            Edit API Scope
        </h2>
        <span class="badge bg-info fs-6">@Model.InputModel.Name</span>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <partial name="_ValidationSummary" />

            <div class="card elevation-2">
                <div class="card-header">
                    <i class="fa-solid fa-cog me-2"></i>
                    Scope Configuration
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="@Model.InputModel.Name" />

                        <div class="mb-3">
                            <label asp-for="@Model.InputModel.DisplayName" class="form-label">Display Name</label>
                            <div class="form-outline" data-mdb-input-init>
                                <input class="form-control form-control-lg" asp-for="@Model.InputModel.DisplayName" autofocus />
                            </div>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="@Model.InputModel.UserClaims" class="form-label">User Claims</label>
                            <div class="form-outline" data-mdb-input-init>
                                <input class="form-control" asp-for="@Model.InputModel.UserClaims" placeholder="Space delimited claims" />
                            </div>
                            <small class="text-muted">Enter claims separated by spaces</small>
                        </div>

                        <hr class="my-4">
                        <h5 class="mb-3">
                            <i class="fa-solid fa-toggle-on me-2"></i>
                            Scope Settings
                        </h5>
                        
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="@Model.InputModel.Enabled" id="enabledSwitch" />
                                <label class="form-check-label fw-semibold" for="enabledSwitch">
                                    Enabled
                                </label>
                            </div>
                            <small class="text-muted ms-4">Allow clients to request this scope</small>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="@Model.InputModel.ShowInDiscoveryDocument" id="discoverySwitch" />
                                <label class="form-check-label fw-semibold" for="discoverySwitch">
                                    Show in Discovery Document
                                </label>
                            </div>
                            <small class="text-muted ms-4">Make this scope visible in the discovery endpoint</small>
                        </div>

                        <div class="d-flex gap-2">
                            <button class="btn btn-primary" type="submit" name="Button" value="save">
                                <i class="fa-solid fa-save me-2"></i>Save Changes
                            </button>
                            <a class="btn btn-secondary" asp-page="/Admin/ApiScopes/Index">
                                <i class="fa-solid fa-times me-2"></i>Cancel
                            </a>
                            <button class="btn btn-danger ms-auto" type="submit" name="Button" value="delete" data-confirm="Are you sure you want to delete this scope?">
                                <i class="fa-solid fa-trash me-2"></i>Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
