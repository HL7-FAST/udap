@page
@model IdentityServer.Pages.Admin.Clients.IndexModel
@{
}

<div class="clients-page">
    <div class="mb-4">
        <h2 class="display-6 mb-3">
            <i class="fa-solid fa-desktop text-primary me-2"></i>
            Clients
        </h2>
    </div>

    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card elevation-2">
                <div class="card-body">
                    <form class="row g-3 align-items-end">
                        <div class="col-md-6">
                            <label for="filter" class="form-label">Filter Clients</label>
                            <div class="form-outline" data-mdb-input-init>
                                <input class="form-control" placeholder="Search by ID or name..." id="filter" name="filter" type="text" value="@Model.Filter" autofocus />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex gap-2">
                                <button class="btn btn-primary">
                                    <i class="fa-solid fa-search me-2"></i>Search
                                </button>
                                <a asp-page="/Admin/Index" class="btn btn-secondary">
                                    <i class="fa-solid fa-times me-2"></i>Cancel
                                </a>
                                <a asp-page="/Admin/Clients/New" class="btn btn-success ms-auto">
                                    <i class="fa-solid fa-plus me-2"></i>New Client
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card elevation-2">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th><i class="fa-solid fa-fingerprint me-2"></i>Client ID</th>
                                <th><i class="fa-solid fa-heading me-2"></i>Name</th>
                                <th><i class="fa-solid fa-project-diagram me-2"></i>Flow</th>
                                <th class="text-center"><i class="fa-solid fa-hashtag me-2"></i>Scopes</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach(var client in Model.Clients)
                            {
                                <tr>
                                    <td>
                                        <a asp-page="/Admin/Clients/Edit" asp-route-id="@client.ClientId" class="text-decoration-none fw-semibold">
                                            <i class="fa-solid fa-edit me-2 text-primary"></i>@client.ClientId
                                        </a>
                                    </td>
                                    <td>@client.Name</td>
                                    <td>
                                        <span class="badge bg-info rounded-pill">@client.Flow</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-secondary rounded-pill">@client.AllowedScopesCount</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
