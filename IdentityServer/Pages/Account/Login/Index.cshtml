@page
@model IdentityServer.Pages.Login.Index

<div class="login-page">
    <div class="lead text-center mb-5">
        <h1 class="display-5 mb-3">
            <i class="fa-solid fa-sign-in-alt text-primary me-2"></i>
            Sign In
        </h1>
        <p class="text-muted fs-5">Choose how to login</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <partial name="_ValidationSummary" />
        </div>
    </div>

    <div class="row justify-content-center">

        @if (Model.View.EnableLocalLogin)
        {
            <div class="col-lg-5 mb-4">
                <div class="card elevation-2 h-100">
                    <div class="card-header">
                        <h2 class="h5 mb-0">
                            <i class="fa-solid fa-user-circle me-2"></i>
                            Local Account
                        </h2>
                    </div>

                    <div class="card-body">
                        <form asp-page="/Account/Login/Index">
                            <input type="hidden" asp-for="Input.ReturnUrl" />

                            <div class="mb-3">
                                <label asp-for="Input.Username" class="form-label">Username</label>
                                <div class="form-outline" data-mdb-input-init>
                                    <input class="form-control form-control-lg" placeholder="Enter your username" asp-for="Input.Username" autofocus>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Input.Password" class="form-label">Password</label>
                                <div class="form-outline" data-mdb-input-init>
                                    <input type="password" class="form-control form-control-lg" placeholder="Enter your password" asp-for="Input.Password" autocomplete="off">
                                </div>
                            </div>
                            
                            @if (Model.View.AllowRememberLogin)
                            {
                                <div class="mb-4">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="Input.RememberLogin" id="rememberLogin">
                                        <label class="form-check-label" for="rememberLogin">
                                            Remember My Login
                                        </label>
                                    </div>
                                </div>
                            }
                            
                            <div class="d-grid gap-2">
                                <button class="btn btn-primary btn-lg" name="Input.Button" value="login">
                                    <i class="fa-solid fa-sign-in-alt me-2"></i>Sign In
                                </button>
                                <button class="btn btn-outline-secondary" name="Input.Button" value="cancel">
                                    <i class="fa-solid fa-times me-2"></i>Cancel
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
        
        <div class="col-lg-5 mb-4">
            <div class="card elevation-2 h-100">
                <div class="card-header">
                    <h2 class="h5 mb-0">
                        <i class="fa-solid fa-info-circle me-2"></i>
                        Test Credentials
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info border-0 mb-0">
                        <h6 class="alert-heading">
                            <i class="fa-solid fa-user me-2"></i>Basic User Account
                        </h6>
                        <hr>
                        <p class="mb-1">
                            <strong>Username:</strong> <code class="text-dark">user</code>
                        </p>
                        <p class="mb-0">
                            <strong>Password:</strong> <code class="text-dark">user</code>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.View.TieredProvider != null)
        {
            <div class="col-lg-10 mb-4">
                <div class="card elevation-2">
                    <div class="card-header">
                        <h2 class="h5 mb-0">
                            <i class="fa-solid fa-layer-group me-2"></i>
                            Tiered OAuth
                        </h2>
                    </div>
                    <div class="card-body">
                        @{
                            var provider = Model.View.TieredProvider;
                        }
                        <a class="btn btn-primary btn-lg"
                           asp-page="/UdapTieredLogin/Challenge"
                           asp-route-scheme="@provider.AuthenticationScheme"
                           asp-route-returnUrl="@(provider.ReturnUrl)">
                            <i class="fa-solid fa-sign-in-alt me-2"></i>
                            @provider.DisplayName
                        </a>
                    </div>
                </div>
            </div>
        }

        @if (Model.View.VisibleExternalProviders.Any())
        {
            <div class="col-lg-10 mb-4">
                <div class="card elevation-2">
                    <div class="card-header">
                        <h2 class="h5 mb-0">
                            <i class="fa-solid fa-globe me-2"></i>
                            External Account
                        </h2>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var provider in Model.View.VisibleExternalProviders)
                            {
                                <a class="btn btn-outline-secondary btn-lg"
                                   asp-page="/ExternalLogin/Challenge"
                                   asp-route-scheme="@provider.AuthenticationScheme"
                                   asp-route-returnUrl="@Model.Input.ReturnUrl">
                                    <i class="fa-solid fa-external-link-alt me-2"></i>
                                    @provider.DisplayName
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (!Model.View.EnableLocalLogin && !Model.View.VisibleExternalProviders.Any())
        {
            <div class="col-lg-10">
                <div class="alert alert-warning border-0 elevation-1">
                    <h6 class="alert-heading">
                        <i class="fa-solid fa-exclamation-triangle me-2"></i>
                        Invalid Login Request
                    </h6>
                    <p class="mb-0">There are no login schemes configured for this request.</p>
                </div>
            </div>
        }
    </div>
</div>